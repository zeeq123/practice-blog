{{> layout/header}}

<div class="container p-5">

    <!-- 요청을 하면 localhost:8080/join POST로 요청됨
    username=사용자입력값&password=사용자값&email=사용자입력값 -->

    <div class="card">
        <div class="card-header"><b>게시글을 수정 해주세요</b></div>
        <div class="card-body">
            {{#updateFormDTO}}
                <form action="/board/{{boardId}}/update" method="post" enctype="application/x-www-form-urlencoded">
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Enter Title" name="title"
                               value="{{title}}">
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control" rows="5" name="content">{{content}}</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary form-control">게시글수정</button>
                </form>
            {{/updateFormDTO}}
        </div>
    </div>
</div>

{{> layout/footer}}